<h1>Editing submissions</h1>

<%#= render 'form' %>

<%= form_for(@submission) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :delta %><br />
    <%= select(:submission, :delta, { "Proceed to next stage" => "1", "No change" => "2", "No longer being considererd" => "3"}) %>
  </div>
  <div class="field">
    <%= f.label :comments %></br>
    <%= f.text_area :comments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

